{% extends '/layout.html.twig' %}

{% block stylesheet %}
    <style>


        #flag_img { width: 120px;}

        #flag_img > img {
            border-radius: 50%;
            width: 120px;
            height: 120px;
        }

        section:first-of-type {margin-top: 150px;}

        section > div:first-of-type {
            height: 150px;
            margin: 20px 100px;
        }

        section > div:first-of-type > div > h1 {
            font-size: 64px;
            text-transform: uppercase;
            padding-top: 20px;
        }

        section > div:nth-of-type(2) {
            padding-left: 50px;
        }


        section > div:nth-of-type(2) > div {
            margin-bottom: 60px;
            height: 150px;
        }

        .description-text {
            column-count: 3;
            column-gap: 40px;
            column-rule-style: solid;
        }

        .container-webcams {
            width: 40%;
            margin: auto auto;
        }

        #street_view { height: 100%;}



    </style>
{% endblock %}


{% block content %}

    {% include 'header.html' %}
    <section class="container-fluid">

        <div class="row">

            <div class="col-1" id="flag_img">
                <img src="{{ country.Flag }}">
            </div>

            <div class="col-9">
                <h1>{{ country.Name }}</h1>
            </div>

            <div class="meteo col-2">Meteo</div>
        </div>

        <div class="row">
            <div class="col-4">
                <blockquote class="description-text">
                    "{{ country.description }}"
                </blockquote>
            </div>

            <div class="col-2 offset-6">
                <table>
                    <tr>
                        <td>Capitale</td>
                        <td>{{ country.Capital }}</td>
                    </tr>
                    <tr>
                        <td>Population</td>
                        <td>{{ country.Population }}</td>
                    </tr>
                    <tr>
                        <td>Langue</td>
                        <td>{{ language.Name }}</td>
                    </tr>
                    <tr>
                        <td>Monnaie</td>
                        <td>{{ currency.Name|capitalize }}</td>
                    </tr>
                </table>
            </div>
        </div>

        <div class="row">
            <div class="col-4 offset-5">
                <h2 style="text-align: center;">Coin cuisine</h2>
                <div class="row">
                    <div class="col-6">
                        <div class="card">
                            <img src="{{ foods[0]['img'] }}" height="200px" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">{{ foods[0]['dish'] }}</h5>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="card">
                            <img src="{{ foods[1]['img'] }}" height="200px" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">{{ foods[1]['dish'] }}</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-4 offset-1">
                <h2 style="text-align: center;">Un peu de musique ?</h2>
                    {% for i in range(0,1) %}
                        <div class="row">
                            <div class="col-12">
                                <a href="{{ music.url }}">{{ music.Title }} - {{ music.Artist }}</a>
                                <div style="height: 200px; border: 1px solid black;">p</div>
                            </div>
                        </div>
                    {% endfor %}
            </div>
        </div>

        <div class="row">
            <div class="col-4 offset-6">
                <h2 style="text-align: center;">Une Webcam au hasard</h2>

                <a name="windy-webcam-timelapse-player" data-id="1463700399" data-play="day"
                   href="https://windy.com/webcams/1463700399" target="_blank">Ã‰gletons: Egletons</a>
                <script async type="text/javascript"
                        src="https://webcams.windy.com/webcams/public/embed/script/player.js"></script>
            </div>
        </div>


        <div class="row" style="height: 600px; width: 600px;">
            <div class="col-12">
                <h2 style="text-align: center;">Une petite balade ?</h2>

                <span id="get_lat">{{ country.lat }}</span>
                <span id="get_long">{{ country.long }}</span>
                <div id="street_view"></div>

            </div>
        </div>

    </section>
{% endblock %}

{% block javascripts %}
    <script>
        let panorama;
        const lat = document.getElementById('get_lat').innerHTML;
        const long = document.getElementById('get_long').innerHTML;

        function initialize() {
            panorama = new google.maps.StreetViewPanorama(
                document.getElementById('street_view'),
                {
                    position: {lat: lat, lng: long},
                    pov: {heading: 165, pitch: 0},
                    zoom: 1
                });
        }

